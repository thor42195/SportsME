<div id="follow_form_<%= @user.id %>">
  <% unless current_user.following?(@user) %>
    <%= form_with(model: current_user.active_reactions.build(followed_id: @user.id)) do |f| %>
      <%= f.hidden_field :followed_id %>
      <%= f.submit "友達リクエスト送信" , class: "btn adminSubmitBtn"%>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.active_reactions.find_by(followed_id: @user.id), method: :delete ) do |f| %>
      <%= f.submit "友達リクエスト解除", class: "btn adminSubmitBtn" %>
    <% end %>
  <% end %>
</div>
