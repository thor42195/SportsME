<% if current_organizer.id == @event.organizer_id %>
  <%= render "admin-header"%>
<% end%>
<div class="container">
  <div class="row">
    <div class="card">
      <div class="card-header">
        イベント名：<%= @event.title%>
      </div>
      <div class="card-header">
        場所：<%= @event.place%>
      </div>
      <div class="card-header">
        日程：<%= @event.starttime.strftime("%Y-%m-%d %H:%M:%S")%>
         ~ <%= @event.endtime.strftime("%Y-%m-%d %H:%M:%S")%>
        （申し込み期限:<%= @event.deadline.strftime("%Y-%m-%d %H:%M:%S")%>）
      </div>
      <div class="card-header">
        <!-- 参加予定の人数をカウントして、追加する-->
        参加人数：『後で追加する』/<%= @event.number%>
      </div>
      <% if @event.image %>
        <%= image_tag(@event.image, :class =>"card-image")%>
      <% end %>
     <div class="card-body">
       <%= @event.content%>
     </div>
     <div class="card-footer">
       <div class="picture-edit">
       <% if current_organizer.id == @event.organizer_id %>
         <%= link_to '詳細', event_path(@event.id),{class:"btn btn-primary"} %>
         <%= link_to '削除',  event_path(@event.id), method: :delete, data:{confirm: 'Are you sure?'},class: 'btn btn-danger' %>
         <%= link_to '編集', edit_event_path(@event.id), class: 'btn btn-info' %>
       <% elsif current_user.id == @user.id %>
       <!-- 期限がきれていたら、参加ボタンが表示されないようにする-->
         <%= link_to '参加する', event_path(@event.id),{class:"btn btn-primary"} %>
         <%= link_to 'ブックマークする', event_path(@event.id),{class:"btn btn-danger"} %>
       <!-- 興味ありのボタンを押した人を見れるようにする-->
         <%= link_to '興味あり', event_path(@event.id),{class:"btn btn-info"} %>
         <%= link_to '興味ある人', event_path(@event.id),{class:"btn btn-info"} %>
       <% end %>
       </div>
     </div>
   </div>
 </div>
</div>
