<%= render'layouts/user-header'%>
<div class="matchingPage">
  <header class="header">
    <i class="fas fa-comments fa-3x"></i>
  </header>
  <div class="container">
    <div class="mt-5">
      <h2 class="pageTitle">メッセージ一覧</h2>
      <div class="matchingList">
        <% @chatusers.each do |chatuser| %>
          <div class="matchingPerson">
            <div class="matchingPerson_name">
              <% if chatuser.target_user(current_user).present? %>
              <%= chatuser.target_user(current_user).name%>
               <%= link_to "メッセージを開く", chatuser_chatmessages_path(chatuser),class:"matchingPerson_name"%>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <div>
  </div>
</div>
