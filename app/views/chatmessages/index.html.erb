<% if @over_ten %>
  <%= link_to '以前のメッセージ', '?m=all' %>
<% end %>

<div class="ui segment">
  <% @chatmessages.each do |message| %>
    <% if message.body.present? %>
      <div class="item">
        <div class="content">
          <div class="header"><strong><%= message.user.name %></strong> <%= message.message_time %></div>
          <div class="list">
            <div class="item">
              <i class="right triangle icon"></i>
              <%= message.body %> /
              <% if message.user == current_user %>
                <%= message.read ? '既読' : '未読' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
<div class="chatPage">
  <header class="header">
    <div class="chatPartner">
      <div class="chatPartner_name"><strong>></strong></div>
    </div>
  </header>
<div class="container">
    <div class="messagesArea messages">
      <% @chatmessages.each do |message| %>
        <% if message.body.present? %>
        <div class="message">
          <span><%= message.user.name %>:</span>
          <div class="commonMessage">
            <div><%= message.body %></div>
          </div>
          <%= message.message_time %>
          <% if message.user == current_user %>
            <%= message.read ? '既読' : '未読' %>
          <% end %>
        </div>

    </div>
    <% end %>
  <% end %>
</div>
<div>
  <form class="messageInputForm">
    <div class='container'>
      <%= form_with(model: [@chatuser, @chatmessage]) do |f| %>
        <div class="field">
          <%= f.text_area :body, class: "form-control" %>
        </div>
          <%= f.text_field :user_id, value: current_user.id, type: "hidden"  %>
        <div>
          <%= f.submit "メッセージを送る" %>
        </div>
      <% end %>
    </div>
  </form>
</div>
